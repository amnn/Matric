
<% @fields.each do |field, contents| %>

$('#<%= field %>').val( '<%= unparse_element(contents) %>' )

<% end %>

field = '#'+'<%= @type %>'+'-'+'<%= @type == "var" ? @var : @mat %>'
value = '<%= truncate((@type == "var" ? @calc.vars[@var.to_sym].to_s : @calc.mats[@mat.to_sym].to_s), :length => 25) %>'

$(field).html(value)

flash = $('#flash')

flash.removeClass().addClass('<%= flash[:type] %>')
flash.html('<%= flash[:msg] %>')
flash.slideDown('normal')

