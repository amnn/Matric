
<% @fields.each do |field, contents| %>

$('#'+'<%= field %>').val( '<%= contents %>' )

<% end %>

field = '#'+'<%= @type %>'+'-'+'<%= @type == "var" ? @var : @mat %>'
value = '<%= @type == "var" ? @calc.vars[@var.to_sym] : @calc.mats[@mat.to_sym] %>'

$(field).html(value)

flash = $('#flash')

flash.removeClass().addClass('<%= flash[:type] %>')
flash.html('<%= flash[:msg] %>')
flash.slideDown('normal')

